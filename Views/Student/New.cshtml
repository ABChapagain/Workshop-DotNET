@model StudentVm;



<div class="container mt-5">
    <a class="btn btn-secondary" asp-controller="Student" asp-action="Index">Back</a>

    <form class="form" method="post">
        <div class="form-group my-3">
            <label asp-for="Name"></label>
            <input class="form-control" type="text" asp-for="Name">
        </div>
        <div class="form-group my-3">
            <label asp-for="Address"></label>
            <input class="form-control" type="text" asp-for="Address">
        </div>

        <div class="form-group my-3">
            <label asp-for="ContactNo"></label>
            <input class="form-control" type="text" asp-for="ContactNo">
        </div>

        <div class="form-group my-3">
            <label asp-for="ClassInfoId"></label>
            <select class="form-control" type="text" asp-for="ClassInfoId" asp-items="Model.ClassOptions">
                <option>Select Options</option>
            </select>
        </div>

        <div class="form-group my-3">
            <label asp-for="FacultyId"></label>
            <select class="form-control" type="text"  asp-for="FacultyId" asp-items="Model.FacultyOptions">
                <option>Select Options</option>
            </select>
        </div>

        
        <button class="btn btn-success" type="submit">Add</button>
    </form>
</div>