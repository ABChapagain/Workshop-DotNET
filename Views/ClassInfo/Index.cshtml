@model List<ClassInfo>

<div class="container mt-5">  
    <a class="btn btn-primary" asp-controller="ClassInfo" asp-action="Create">Create</a>
    <table class="table mt-5 table-light table-striped p-2">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="ClassInfo" asp-action="Update" asp-route-id="@item.Id" class="btn">Edit</a>
                        <a class="btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

